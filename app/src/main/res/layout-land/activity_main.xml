<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/morning" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iconLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/logoapp" />

        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iconLogo"
            android:layout_toRightOf="@id/iconLogo"
            android:text="Al-Qur\'an dan Tahsin"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNama"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/iconLogo"
            android:text="Yuk Baca Al-Qur\'an dan Belajar Tahsin"
            android:textColor="#FFF"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/tvCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:layout_below="@id/tvClok"
            android:shadowRadius="2"
            android:text="17 September 2019"
            android:textColor="#FFF"
            android:textSize="16dp" />

        <TextClock
            android:id="@+id/tvClok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:format12Hour="hh : mm a"
            android:text="14 : 00"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivBackground"
            android:layout_marginTop="25sp"
            android:gravity="center"
            android:padding="10dp">


            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="115dp"
                android:layout_height="115dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="13dp"
                        android:src="@drawable/logobaca" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baca Al-Qur\'an"
                        android:textStyle="bold"
                        android:textColor="#4886A7"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/card1"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="13dp"
                        android:src="@drawable/logotahsinbener" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Belajar Tahsin"
                        android:textStyle="bold"
                        android:textColor="#4886A7"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card3"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/card2"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="13dp"
                        android:src="@drawable/logotahsin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Adab Membaca Al-Qur\'an"
                        android:textStyle="bold"
                        android:textColor="#4886A7"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card4"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="-230dp"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@id/card3"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="13dp"
                        android:src="@drawable/logojadwal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jadwal Shalat"
                        android:textStyle="bold"
                        android:textColor="#4886A7" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card5"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_toRightOf="@id/card4"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="13dp"
                        android:src="@drawable/ic_info_outline_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Tentang"
                        android:textStyle="bold"
                        android:textColor="#4886A7"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/rlMain"
            android:layout_marginStart="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="25dp"
            app:cardCornerRadius="10dp">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fillColor="#FFFFFF"
                app:pageColor="#000000"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp" />
        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/viewMain"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/cardview"
            android:background="#000" />


    </RelativeLayout>
</ScrollView>